{
  "name": "mcp-backlog-md",
  "version": "1.0.0",
  "description": "An MCP (Model Context Protocol) server for the backlog.md CLI tool.",
  "type": "module",
  "main": "build/src/server.js",
  "bin": {
    "mcp-backlog-md": "./build/src/server.js"
  },
  "scripts": {
    "start": "node build/src/server.js",
    "clean:all": "run-s clean clean:all:cmd",
    "clean:all:cmd": "rimraf node_modules package-lock.json",
    "clean": "rimraf build",
    "build": "npm run clean && tsc && chmod 755 build/src/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "check-all": "npm-run-all format lint build",
    "test": "jest",
    "inspector": "npx @modelcontextprotocol/inspector build/src/server.js"
  },
  "keywords": [
    "mcp",
    "backlog",
    "cli",
    "tasks",
    "automation"
  ],
  "author": "telco2011 <davidlopez.david@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "change-case": "^5.4.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
